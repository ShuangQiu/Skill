cv = dbOpenCellViewByType( libname cellname "layout"  "maskLayout" "w")
;cv = dbOpenCellViewByType( "INNOTEP_v4" "box2" "layout" "maskLayout" "w")
;cv = ddGetObj(libname cellname "layout")
;printf("\nCVCVCVCVCVCV %L CVCVCVCVCVCV\n" cv)


